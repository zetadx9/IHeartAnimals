                    <a class="nav-link" href="/profile">Profile</a>
                 </li>
  </nav>

   </header>

              <!-- Front Cover -->
              <section id="home" class="heart">
                <div class="title">
                  <h1>I Heart Animals</h1>
                  <p id="color">"Edit Animal"</p>
                </div>
              </section>

   <main class="container h-100 mt-5">
    <h1>Edit Animal Page</h1>

    <form action="/animals/<%= animal._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" id="name" name="name" value="<%= animal.name %>" />
      </div>

      <div class="form-group">
        <label for="image">Image</label>
        <input type="text" id="image" name="image" class="form-control" />
      </div>

      <div>
        <label for="body">Content</label>
        <textarea id="body" name="body"></textarea>
      </div>

      <div class="form-group">
        <label for="image">Card Image 1</label>
        <input type="text" id="cardImage1" name="cardImage1" class="form-control" />
      </div>

      <div class="form-group">
        <label for="image">Card Image 2</label>
        <input type="text" id="cardImage2" name="cardImage2" class="form-control" />
      </div>

      <div class="form-group">
        <label for="image">Card Image 3</label>
        <input type="text" id="cardImage3" name="cardImage3" class="form-control" />
      </div>

      <button class="btn btn-primary float-right" type="submit">Edit Animal</button>
    </form>
  </main>

    <footer class="footer"> 
        <div class="container"> 
