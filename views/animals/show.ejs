<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- CSS -->
        <link rel='stylesheet' href='https://cdnjs.cloudflare.com/
    ajax/libs/twitter-bootstrap/4.0.0-alpha/css/bootstrap.min.css'>
   <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/Styles/index.css">

              <!-- JS Scripts -->
              <script src='https://cdnjs.cloudflare.com/ajax/libs
              /jquery/2.2.1/jquery.min.js'></script>
            <script src='https://cdnjs.cloudflare.com/ajax/libs/
             twitter-bootstrap/4.0.0-alpha/js/bootstrap.min.js'></script>
             <script defer src="/js/app.js"></script>

</head>
<body>
    <!-- Background Music -->
    <!-- <iframe style="display: none;" width="560" height="315" src="frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"></iframe> -->
    
   <header>
    <nav class="navbar"> 
      <ul class="nav-list">
               <li class="nav-item">
               <a href="/sea" class="nav-link">Sea World</a>
                </li>
                 <li class="nav-item">
                     <a class="nav-link" href="/">Home</a>
                   </li>
                   <li class="nav-item" class="nav-link">
                      <a href="/about" class="nav-link">About</a>
                  </li>
                   <li class="nav-item">
                     <a class="nav-link" href="/animals">Animals</a>
                   </li>
                   <li class="nav-item">
                     <a class="nav-link" href="/animals/new">Create Animal</a>
                   </li>
                   <li class="nav-item">
                   <a class="nav-link" href="/register">Sign Up</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/login">Login</a>
                  </li>
                   <li class="nav-item">
                     <a class="nav-link" href="/logout">Logout</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/profile">Profile</a>
                 </li>
  </nav>

   </header>

              <!-- Front Cover -->
              <section id="home" class="heart">
                <div class="title">
                  <h1>&hearts; I Heart Animals &hearts;</h1>
                  <p id="color">Animal: <%= animal.name %></p>
                </div>
              </section>

   <main class="container">

  <h1 id="under" class="Title"><em><%= animal.name %></em></h1>

    <div class="skills-gallery">
   <img class="center" src="<%= animal.image %>" alt="">
   </div>


    <br>
      <section>
        <h3 class="under">Description</h3>
        <p class="change1"> <%= animal.descript %>
      </p>
      </section>
<br>

      <section>
        <h3 class="under">Diet</h3>
        <p class="change2"> <%= animal.diet %>
      </p>
      </section>
<br>

      <section>
        <h3 class="under">Location</h3>
        <p class="change1"> <%= animal.location %>
      </p>
      </section>

<br>
      <section>
        <h3 class="under">Video</h3>
        <div class="skills-gallery">
        <section id="Skills" class="center2">

        <object width="418" height="344" data="https://www.youtube.com/embed/<%= animal.video %>"></object>
        <object width="418" height="344" data="https://www.youtube.com/embed/<%= animal.video2 %>"></object>

        </section>
        </div>
        </section>

<br>
    <section class="mt-4">
      <ul>
        <% animal.articles.forEach((article, i) => { %>
        <li><%= i %>. <a href="/articles/<%= article._id %>"><%= article.title %></a></li>
        <% }) %>
      </ul>
    </section>
<br>

<h3 class="under">Photo Gallery</h3>
<section id="Skills" class="container">
  <br>
  <div class="skills-gallery">
        <img src="<%= animal.cardImage1 %>" alt="">
        <img src="<%= animal.cardImage2 %>" alt="">
        <img src="<%= animal.cardImage3 %>" alt="">

  </div>
        </section>
    

  <p>created: <%= new Date(animal.createdAt).toLocaleDateString() %></p>

      <!-- <form style="display: inline;" action="/animals/<%= animal._id %>?_method=DELETE" method="POST"> -->
        <button id="<%= animal._id %>" class="btn btn-danger btn-sm delete" type="submit">Delete</button>
        <!-- </form> -->
    
    
        <a href="/animals/<%= animal._id %>/edit">
          <button class="btn btn-info btn-sm">Edit</button>
        </a>
    
  </main>

    <footer class="footer"> 
        <div class="container"> 
            <span>&copy2020 I-Heart-Animals General Assembly</span> 
        </div> 
    </footer> 
</body>
</html>